<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Screenshot Servie</title>
</head>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body{
            background-color: #123;
            padding: 0 60px;
        }
        article{
            margin: 20px;
            padding: 20px;
            align-items: center;
        }
        img{
            max-width: 100%;
            margin-top: 20px;
            margin-left: 10px;
        }
        form{
            display: flex;
            border: 4px solid #26c;
            border-radius: 25px;
        }
        input{
            width: 100%;
            background-color: transparent;
            color: white;
            border: 0;
            padding: 10px 15px;
        }
        input::placeholder{
            color: white;
        }
        input:focus{
            outline: 0;
        }
        button{
            background-color: #26c;
            border: 0;
            padding: 10px 15px;
            border-top-right-radius: 24px;
            border-bottom-right-radius: 24px;
            color: white;
            cursor: pointer;
        }
    </style>
<body>
    <article>
        <form onsubmit="doScreenshot(); return false;"> 
            <input type="url" name="url" placeholder="example: https://youtube.com">
            <button type="submit">Screenshot!</button>
        </form>
        <img alt="your Screenshot" style="display: none;">
    </article>

    <script>
        function doScreenshot(){
            const url = document.querySelector("input").value;
            if(!url) return;
            const img = document.querySelector("img");
            img.style.display = 'none';
            img.src = '/screenshot?url='+encodeURIComponent(url);
            img.onload = () =>{
                img.style.display = 'block'
            }
        }
        

    </script>
</body>
</html>